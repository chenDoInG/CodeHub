<android.support.v7.widget.CardView
    android:id="@+id/cv_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/actionbarLayoutId"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"  >


        <ImageView
            android:id="@+id/item_event_type"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="top|end" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_event_thumb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/item_event_type"
            android:layout_gravity="center_vertical"/>
        <!--<ImageView-->
            <!--android:id="@+id/item_event_thumb"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_below="@+id/item_event_type"-->
            <!--android:layout_gravity="center_vertical" />-->


        <TextView
            android:id="@+id/item_event_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/item_event_type"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:layout_gravity="top|start"/>

        <TextView
            android:id="@+id/item_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_event_type"
            android:layout_below="@+id/item_event_time"
            android:textSize="16sp"
            android:layout_gravity="start|center_vertical"
            android:padding="10dp"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>