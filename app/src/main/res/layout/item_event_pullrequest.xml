<android.support.v7.widget.CardView
    android:id="@+id/cv_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout android:id="@+id/actionbarLayoutId"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">


        <ImageView
            android:id="@+id/item_pullrequest_type"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|end"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/item_pullrequest_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="top|start"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/item_pullrequest_type"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_pullrequest_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_pullrequest_time"
            android:layout_toRightOf="@+id/item_pullrequest_type"
            android:textSize="16sp"/>

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_pullrequest_thumb"
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/item_pullrequest_description"
            android:layout_toRightOf="@+id/item_pullrequest_type"
            android:scaleType="fitStart"
            app:riv_corner_radius="5dip"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"/>

        <TextView
            android:id="@+id/item_pullrequest_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_pullrequest_description"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/item_pullrequest_thumb"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/item_pullrequest_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_pullrequest_comment"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/item_pullrequest_thumb"
            android:background="@drawable/rounded_corner"
            android:padding="10dp"
            android:textSize="16sp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>